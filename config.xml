<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "SarabandaStaff"
        version     = "1.0.0" >

    <gap:config-file platform="ios" parent="CFBundleShortVersionString">
        <string>300</string>
    </gap:config-file>

    <preference name="phonegap-version"/>
	<gap:platform name="ios" />
	<gap:platform name="android" />
    <gap:platform name="winphone" />

    
    <access origin="10.0.0.1" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />

    <name>SarabandaStaff</name>
    <icon src="icon.png" gap:platform="ios" width="57" height="57" />


		
    <gap:splash src="splash.png" gap:platform="ios"     width="320" height="480" />
       
    <author href="http://www.chivuolessersarabada.com" email="info@chivuolessersarabada.com">
        Sauro Gabellini
    </author>

    <plugin name="org.apache.cordova.camera" spec="0.3.6" />
    <plugin name="cordova-plugin-inappbrowser" spec="1.0.1" />
    <plugin name="manateeworks-barcodescanner" />

    <gap:plugin name="cordova-plugin-whitelist" source="npm"/>
    <plugin name="cordova-plugin-vibration" spec="~2.1.3" />
	<plugin name="cordova-plugin-insomnia" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.6.1" />
    
	<access origin="*" />
</widget>
